<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.mikolaj.newapplication.statistics">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="Statystki zdarzeÅ„"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"
                    tools:lay="100dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart"
                    android:layout_width="370dp"
                    android:layout_height="420dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    tools:layout_editor_absoluteX="7dp"
                    tools:layout_editor_absoluteY="65dp"></com.github.mikephil.charting.charts.PieChart>

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="368dp"
                    android:layout_height="41dp"
                    android:layout_alignEnd="@+id/chart"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="32dp"
                    android:layout_weight="1"
                    android:entries="@array/dzielnice_gdanska"
                    android:prompt="@string/hint_dzielnica"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="20dp" />
        </RelativeLayout>


</LinearLayout>
